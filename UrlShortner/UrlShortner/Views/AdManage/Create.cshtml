@model UrlShortner.Models.AdManageViewModel

@{
    ViewBag.Title = UrlShortner.LocalResource.Resource.CreateAd;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Themes/ckeditor_full/ckeditor.js"></script>

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>@UrlShortner.LocalResource.Resource.CreateAd</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@UrlShortner.LocalResource.Resource.AdDetails</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        @using (Html.BeginForm("Create", "AdManage", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal form-label-left" }))
                        {
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    @UrlShortner.LocalResource.Resource.Title <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(model => model.Title, null, new { @class = "form-control col-md-7 col-xs-12" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    @UrlShortner.LocalResource.Resource.Description <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextAreaFor(model => model.Description, new { @id = "FullDescription", @class = "form-control", @rows = "200" })

                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    <script>
                                        CKEDITOR.replace('FullDescription', { toolbar: '1', htmlEncodeOutput: true });
                                    </script>
                                </div>
                               
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    @UrlShortner.LocalResource.Resource.UploadFile <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @*<input type="file" id="fileUpload" />*@
                                    <input type="file" name="@UrlShortner.LocalResource.Resource.File" id="file" />
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <a class="btn btn-primary" href="@Url.Action("index")">@UrlShortner.LocalResource.Resource.Cancel</a>
                                        <input type="submit" class="btn btn-success" value="@UrlShortner.LocalResource.Resource.Submit" />
                                    </div>
                                </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->